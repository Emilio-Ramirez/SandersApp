generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  admin
}

model User {
  id               Int           @id @default(autoincrement())
  username         String        @unique
  email            String        @unique password         
  role             Role          @default(user)
  stripeCustomerId String?
  donaciones       Donacion[]
  suscripciones    Suscripcion[]
}

model Proveedor {
  id                  Int    @id @default(autoincrement())
  nombre              String
  contacto            String
  telefono            String
  email               String
  producto_especifico String
}

model Proyecto {
  id                  Int              @id @default(autoincrement())
  nombre              String
  descripcion         String
  costo_total         Decimal
  suma_recaudada      Decimal
  fecha_inicio        DateTime
  fecha_fin           DateTime
  link_ubicacion      String
  estado_trazabilidad Json
  stripeIdProducto    String?
  donaciones          Donacion[]
  donacionesFisicas   DonacionFisica[]
  estadisticas        Estadistica[]
  suscripciones       Suscripcion[]
}

model Donacion {
  id         Int       @id @default(autoincrement())
  usuarioId  Int?
  proyectoId Int?
  cantidad   Decimal
  fecha      DateTime
  stripe_id  String?
  es_mensual Boolean
  email      String?
  proyecto   Proyecto? @relation(fields: [proyectoId], references: [id])
  usuario    User?     @relation(fields: [usuarioId], references: [id])
}

model DonacionFisica {
  id          Int       @id @default(autoincrement())
  proyectoId  Int?
  cantidad    Decimal
  fecha       DateTime
  descripcion String
  proyecto    Proyecto? @relation(fields: [proyectoId], references: [id])
}

model Suscripcion {
  id                     Int      @id @default(autoincrement())
  usuarioId              Int
  proyectoId             Int
  stripe_subscription_id String
  estado                 String
  fecha_inicio           DateTime
  fecha_fin              DateTime
  cantidad               Decimal
  usuario                User     @relation(fields: [usuarioId], references: [id])
  proyecto               Proyecto @relation(fields: [proyectoId], references: [id])
}

model Estadistica {
  id                 Int      @id @default(autoincrement())
  proyectoId         Int
  personas_ayudadas  Int
  agua_proporcionada Decimal
  fecha              DateTime
  proyecto           Proyecto @relation(fields: [proyectoId], references: [id])
}
